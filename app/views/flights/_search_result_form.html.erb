<% unless @available_flights.nil? %>
  <% if @available_flights.any? %>
  <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Flight ID</th>
          <th>Departure</th>
          <th>Arrival</th>
          <th>Duration</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @available_flights.each do |flight| %>
          <tr>
            <td><%= flight.id %></td>
            <td><%= flight.depart_airport.code %></td>
            <td><%= flight.arrival_airport.code %></td>
            <td><%= flight.duration %> mins</td>
            <td><%= flight.depart_time %></td>
            <td>
              <%= button_to 'Book Flight', new_booking_path, method: :get, params: { flight_id: flight.id, passenger_count: params[:flight][:passenger_count] } %> %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
    <p>No available flights found.</p>
  <% end %>
<% end %>
