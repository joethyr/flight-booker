<div class="card text-center">
  <div class="card-header">
    <h1>Flights#Index</h1>
  </div>
  <div class="card-body">
    <h5 class="card-title">Search for Flights</h5>

<%= form_with url: "/flights", method: :get do |form|%>

  <div class="form-row d-flex justify-content-center">
    <div class="col">
      <%= form.label :depart_airport_id, "Departure:" %>
      <%= form.collection_select(:depart_airport_id, Airport.all.order(:code), :id, :code, include_blank: '') %>
    </div>
        <div class="col">
          <%= form.label :arrival_airport_id, "Arrival:" %>
      <%= form.collection_select(:arrival_airport_id, Airport.all.order(:code), :id, :code, include_blank: '', class: "form-control") %>
    </div>
        <div class="col">
          <%= form.label :passenger_count, "Passenger :" %>
      <%= form.select(:ticket, 1..4, include_blank: '', class: "form-control") %>
    </div>
        <div class="col">
          <%= form.label :depart_time, "Date:" %>
      <%= form.collection_select(:depart_time, Flight.select(:depart_time).distinct.order(:depart_time), :depart_time, :formatted_date, include_blank: '', class: "form-control") %>
    </div>
      <div class="form-button ">
    <%= form.submit "Search Flights" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
